
<h1>User info</h1>











<h1>Books</h1>

<% @books.each do |book| %>

<div>
  <p>title：<%= book.title %></p>

  <p>body：<%= book.body %></p>

</div>
<% end %>


<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>

  <%= f.text_field :title %>

  <h4>Opinion</h4>

  <%= f.text_area :body%>

  <%= f.submit 'Create Book' %>
<% end %>