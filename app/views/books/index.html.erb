
<div class="container">
  <div Class="row">

<div class="col-md-3">

<%= render 'books/list', book: @book, user: @user %>

</div>

<div class="col-md-8">
<h1>Books</h1>

<table class="table table-striped">

<thead>

   <tr>
     <th></th>
      <th>Title</th>

      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
</thead>

<tbody>
<% @books.each do |book| %>



<tr>
 <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image" %></td>
<td> <%= link_to book.title, "/books/#{book.id}" %></td>

  <td><%= book.body %></td>


</tr>

<% end %>
</tbody>
</table>

</div>

</div>
</div>