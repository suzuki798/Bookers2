<div class="container">
    <div Class="row">
        <div class="col-md-3">
            <%= render 'books/list', book: @book_new, user: @book.user,user_book: @book_new%>
            </div>
            <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table class="table table-striped">


<tbody>

 <tr>
  <td><%= link_to(@book.user) do %>
       <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image" %><br>
       <%= @book.user.name %>
      <% end %>
  </td>
  <td> <%= link_to @book.title, book_path(@book) %></td>
  <td><%= @book.body %></td>

     <% if  @book.user == current_user%>
      <td><%= link_to "Edit", edit_book_path(@book.id) , class: "btn btn-sm btn-success btn-block " %></td>
      <td><%= link_to "Destroy",book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger ", data: {confirm: "削除しますか？"} %></td>

     <%end%>



 </tr>

</tbody>
</table>
</div>
</div>
</div>