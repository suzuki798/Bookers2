



<h1>User info</h1>
 <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image" %>



 <table class="table table-striped">
  <tbody>
   <tr></tr>
   <tr>
    <th>name</th>
    <th> <%= user.name %></th>
    </tr>

    <tr>
     <th>introduction</th>
     <th> <%= user.introduction %></th>
     </tr>
     </tbody>
</table>

<div Class="row">
 <%= link_to "", "/users/#{user.id}/edit" , class: "btn btn-outline-secondary btn-block edit_user_9291 fas fa-user-cog" %>

 </div>

 <h1>New book</h1>
 <%= form_with model: book, local:true do |f| %>

  <h4>Title</h4>

  <%= f.text_field :title %>

  <h4>Opinion</h4>

  <%= f.text_area :body%>

  <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>
