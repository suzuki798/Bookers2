
    <div class="container">
  <div Class="row">

<div class="col-md-3">

<%= render 'books/list', book: @book, user: @user,user_book: Book.new %>

</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>


<table class="table table-striped">

<thead>

   <tr>
     <th></th>
      <th>Title</th>

      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
</thead>

<tbody>
<% @books.each do |book| %>

 <tr>
 <td>
     <%= link_to(book.user) do %>
