<% @users.each do |post_image| %>
<div>
  <%= link_to user_path(user.id) do %>
    <%= attachment_image_tag user, :profile_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg') %></p>

  <p>説明：<%= post_image.caption %></p>
  <p>ユーザーネーム：<%= post_image.user.name %></p>
</div>
<% end %>
<%= paginate @users %>